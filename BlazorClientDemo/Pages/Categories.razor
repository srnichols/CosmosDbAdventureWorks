@page "/categories"
@inject HttpClient Http


<h1>Product Categories</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (myCategories == null)
{
    <p><em>Loading...</em></p>
}
else
{    
    <table class="table">
        <thead>
            <tr>
                <th>CategoryId</th>
                <th>CategoryName</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in myCategories)
            {
                <tr>
                    <td>@category.id</td>
                    <td>@category.name</td>
                    <td>@category.type</td>
                </tr>
            }
        </tbody>
    </table>
}
