@page "/category"
@inject HttpClient Http


<h1>Product Categories</h1>
<p>This component demonstrates fetching data from the server.</p>
<a href="@($"categoryedit/")" class="btn btn-success m-1">New</a>

@if (myCategories == null)
{
    <p>
        <em>Loading...</em> <div class="spinner"></div>
    </p>
}
else
{    
    <table class="table">
        <thead>
            <tr>
                <th>CategoryId</th>
                <th>CategoryName</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in myCategories)
            {
                <tr>
                    <td><a href="@($"categorydetails/{category.id}")" class="btn btn-primary m-1">View</a></td>
                    <td>@category.name</td>
                    <td>@category.type</td>
                </tr>
            }
        </tbody>
    </table>
}
